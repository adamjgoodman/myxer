<div class="container mx-auto bg-teal-500 rounded-lg text-white p-5">
  <div class="text-xl font-bold">
    <%= @user.username %>
  </div>
  <div class="pl-4 pr-4">
      <% if @profile.location.present? %>
        Location: <%= @profile.location %><br />
      <% end %>
      <% if @profile.status.present? %>
        Status: <%= @profile.status %><br />
      <% end %>
      <% if @profile.bio.present? %>
        Bio: <%= @profile.bio %>
      <% end %>
  </div>
</div>

<% @myxes.each do |myx| %>
  <div class="mt-4 container w-2/3 pt-6 pl-10 pr-10 pb-8 mx-auto bg-white bg-opacity-75 border-solid border border-gray-400 rounded">
    <div class="text-teal-800 text-sm font-bold mb-2">
      <%= link_to user_profile_path(myx.user.id) do %>
        <%= myx.user.username %>
      <% end %>
    </div>
    <div class="text-sm text-gray-700 pl-4">
      <%= myx.message %>
    </div>
  </div>
  <br />
<% end %>