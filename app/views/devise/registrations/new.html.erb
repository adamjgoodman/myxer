<div class="rounded mt-4 px-8 pt-6 pb-8 mb-4 text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class:'block tracking-wide text-gray-700 text-s font-bold mb-2' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'w-1/2 bg-gray-300 appearance-none rounded py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white' %>
    </div>
    <br />
    <div class="field">
      <%= f.label :email, class:'block tracking-wide text-gray-700 text-s font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-1/2 bg-gray-300 appearance-none rounded py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white' %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password, class:'block tracking-wide text-gray-700 text-s font-bold mb-2' %>
      <%= f.password_field :password, autocomplete: "new-password", class:'w-1/2 bg-gray-300 appearance-none rounded py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white'  %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password_confirmation, class:'block tracking-wide text-gray-700 text-s font-bold mb-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'w-1/2 bg-gray-300 appearance-none rounded py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white'  %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Sign up", class:'bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded-full' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>
